<h1>Listing models</h1>

<table border="1" cellspacing="0" cellpadding="2">
  <tr>
    <th>ID</th>
		<th>Name</th>
    <th>Xml file name</th>
    <th>Owner name</th>
		<th>Packages</th>
    <th>Funktionen</th>
  </tr>

<% @models.each do |model| %>
  <tr>
    <td><%=h model.id %></td>
		<td><%=h link_to model.name, model %></td>
    <td><%=h model.xml_file_name %></td>
    <td><%=h model.owner_name %></td>
    <td><%= link_to 'Packages', "models/#{model.id}/packages" %></td>
    <td><%= link_to 'Statistic', "model/statistic/#{model.id}" %> | <%= link_to 'Edit', edit_model_path(model) %> | <%= link_to 'Destroy', model, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New model', new_model_path %>